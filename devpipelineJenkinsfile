pipeline {
    agent none
    stages {
        stage('Build ServerLess') {
            agent any
            steps {
                println  "Building serverless artifacts"
            }
        }
        stage('Deploy Assets') {
            agent any
            matrix {
                agent any
                axes {
                    axis {
                        name 'Region'
                        values 'us-east-1', 'eu-west-1'
                    }
                }
                stages {
                    stage('Deploy Finops Assets') {
                        steps {
                            println "Deploying Finops assets on " + Region
                        }  
                    }
                    stage('Deploy Billing Alarms')  {
                        when { environment name : 'Region', value 'us-east-1'
                        }
                            steps {
                            println "Deploying billing alerts on " + Region
                        }
                    }
                }
            }             
        }
        stage('BuildFinops Alarms') {
            matrix {
                agent any
                axes {
                    axis {
                        name 'Region'
                        values 'us-east-1', 'eu-west-1'
                    }
                }
                stages {
                    stage('BuildFinops Service-specific alerts') {
                        steps {
                            println "Building Finops assets on " + Region
                        }
                    }  
                }
            }      
        steps {
            println "Helllllloooowwwwwww" 
        }  
        }  
        stage('BuildSecops') {
            matrix {
                agent any
                axes {
                    axis {
                        name 'Region'
                        values 'us-east-1', 'eu-west-1'
                    }
                }
                stages {
                    stage('Build secops base alerts') {
                        steps {
                            println "Building Secops assets in " + Region
                        }
                    }  
                }
            }  
}

    }
}
