pipeline {
    agent none
    stages {
        stage('BuildServerLess') {
            agent {
                docker {
                    image 'alpine:3'
                }
            }
            steps {
                sh 'echo "Building serverless artifacts"'
            }
        }
        stage('BuildFinops') {
            agent {
                docker {
                    image 'alpine:3'
                }
            }
            steps {
                sh 'echo "Building Finops assets"'
            }
}
        stage('BuildSecops') {
            agent {
                docker {
                    image 'alpine:3'
                }
            }
            steps {
                sh 'echo "Building Secops assets"'
            }
}

    }
}
